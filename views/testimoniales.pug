extends ./layout/index

block contenido 
    main.container.mt-5 
        h1.text-center.mt-5= pagina

        blockquote.text-center Lee sobre nuestro cliente y sus experiencias 
        
        include ./layout/bloque_testimoniales

        .row 

            .col-md-12 
                h2.d-block.w-100.text-center Agrega un Testimonial


                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col  
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre")  Nombre 
                            input#nombre(type="text", placeholder="Nombre", name="nombre", class="form-control", value= nombre)
                        .form-group 
                            label(for="nombre")  Correo Electronico 
                            input#nombre(type="text", placeholder="Tu Correo", name="correo", class="form-control", value=  correo)
                        .form-group 
                            label(for="nombre")  Nombre 
                            textarea#mensaje(name="mensaje", rows="3",  class="form-control")= mensaje
                        input(type="submit", class="btn btn-success btn-block")